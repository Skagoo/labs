{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"sourceMap": false,
		"noImplicitAny": true,
		"paths": {
			"@app/*": ["app/*"],
			"@components/*": ["components/*"],
			"@public/*": ["public/*"],
			"@styles/*": ["styles/*"],
			"@utils/*": ["utils/*"],
			"@webgl": ["webgl/index"],
			"@webgl/*": ["webgl/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "components/potion/header"],
	"exclude": ["node_modules"]
}
